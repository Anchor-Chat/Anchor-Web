{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"node_modules/**",
			"dist/**",
			"platforms/**",
			"hooks/**",
			"src/App_Resources/**"
		]
	},
	"rules": {
		"indent": [
			true,
			"tab"
		],
		"interface-name": false,
		"no-consecutive-blank-lines": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"quotemark": [
			true,
			"single"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
		"platforms",
		"hooks",
		"src/App_Resources"
	]
}